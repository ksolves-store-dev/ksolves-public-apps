<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.Message" t-inherit="mail.Message" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_Message_prettyBody')]" position="after">
            <button t-if="message.is_edit" class="o_Activity_toolButton btn btn-linkedit" t-on-click="_ksOnClickEditMsg"><i class="fa fa-pencil"></i> Edit </button>
            <button t-if="message.is_delete" class="o_Activity_toolButton btn btn-linkcancel" t-on-click="_ksOnClickDeleteMsg"><i class="fa fa-trash-o"></i> Delete </button>
            <t t-if="message.current_date"><p class="ks-module"><b>Last edited by: <t t-esc="message.current_user"/> at: <t t-esc="message.current_date"/></b></p></t>
            <p class="ks-module"><b></b></p>
        </xpath>
    </t>
</templates>