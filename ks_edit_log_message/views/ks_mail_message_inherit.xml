<odoo>
        <record model="ir.ui.view" id="ks_mail_message_inherit_view">
            <field name="name">Mail Message Inherit</field>
            <field name="model">mail.message</field>
            <field name="mode">primary</field>
            <field name="priority">40</field>
            <field name="inherit_id" ref="mail.mail_message_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email_from']" position="after">
                    <field name="ks_last_edited_by"/>
                </xpath>
                <xpath expr="//field[@name='email_from']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='subject']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='author_id']" position="attributes">
                    <attribute name="attrs">{'readonly': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='message_type']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='subtype_id']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='is_internal']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='model']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='res_id']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='record_name']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='moderation_status']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='moderator_id']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='moderator_id']" position="before">
                    <field name="ks_last_edited_date"/>
                </xpath>
                <xpath expr="//page[@name='gateway']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='recipients']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='page_tracking']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="ks_action_mail_message_extension_new" model="ir.actions.act_window">
            <field name="name">Schedule Activity</field>
            <field name="res_model">mail.message</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ks_edit_log_message.ks_mail_message_inherit_view"/>
            <field name="target">new</field>
        </record>
</odoo>