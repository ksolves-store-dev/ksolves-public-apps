<odoo>

    <template id="ks_signin" inherit_id="web.login" primary="True">
         <xpath expr="//div[hasclass('field-login')]" position="before">

        </xpath>
    </template>

    <template id="ks_signup" inherit_id="auth_signup.signup" primary="True">
        <xpath expr="//t[@t-call='auth_signup.fields']" position="after">
            <t t-call="ks_login.layout_template1">
                <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
            </t>
        </xpath>
    </template>

