<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ks_product_template_inherit_display_pricelist" model="ir.ui.view">
            <field name="name">product template pricelist</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale']" position="before">
                    <div name="ks_sale_pricelists">
                        <separator string="Sale Pricelist Price"/>
                        <field name="ks_sale_pricelists" context="{'product_templ_id': active_id}">
                             <tree string="Sale Pricelist Price">
                                <field name="name"/>
                                <field name="product_price"/>
                            </tree>
                        </field>
                    </div>
                </xpath>

            </field>
        </record>
        <record id="ks_product_product_inherit_display_pricelist" model="ir.ui.view">
            <field name="name">product product pricelist</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='ks_sale_pricelists']" position="replace">
                    <div name="ks_sale_pricelists">
                        <separator string="Sale Pricelist Price"/>
                        <field name="ks_sale_pricelists" context="{'product_id': active_id}">
                             <tree string="Sale Pricelist Price">
                                <field name="name"/>
                                <field name="product_price"/>
                            </tree>
                        </field>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>