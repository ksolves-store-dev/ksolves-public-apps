<templates>
    <div t-name="ks_product_pricelist_widget">
        <div t-if="widget.unit_price and widget.unit_price>0">
            <a tabindex="0" class="fa fa-bar-chart ks_graph"/>
        </div>
    </div>

    <div t-name="QtyDetailPopOver_1" style="width:200px; height:100px;">
        <tr>
            <td>
                <strong>Applied Pricelist :</strong>
                <span t-esc="data.ks_pricelist_id"/>
            </td>
        </tr>
        <tr>
            <br/>
            <td>
                <strong>Discount Product Price :</strong>
            </td>
            <span t-esc='data.ks_discount_price'/>&#160;<span t-esc="data.ks_symbol_price"/>
        </tr>
        <tr>
            <br/>
            <td>
                <strong>Actual Product Price :</strong>
            </td>
            <span t-esc='data.ks_actual_price'/>&#160;<span t-esc="data.ks_symbol_price"/>

        </tr>
    </div>

</templates>
